datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  userId                String                  @id @unique
  firstName             String
  lastName              String
  email                 String                  @unique
  password              String
  phone                 String?
  OrganisationsAndUsers OrganisationsAndUsers[]
}

model Organisation {
  orgId                 String                  @id @unique
  name                  String
  description           String?
  OrganisationsAndUsers OrganisationsAndUsers[]
}

model OrganisationsAndUsers {
  user_id      String
  org_id       String
  user         User         @relation(fields: [user_id], references: [userId])
  organisation Organisation @relation(fields: [org_id], references: [orgId])

  @@id([user_id, org_id])
}
